;; Global WM Settings

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 2

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 4

##########################################################################################################################################

;; File Inclusion
; include an external file, like module file, etc.

include-file = ~/.config/leftwm/themes/current/polybar/modules.ini

##########################################################################################################################################

[color]
;background = ${xrdb:color0:#222}
background = #3B4252
;background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #81A1C1
;foreground-alt = #555
primary = #8FBCBB
secondary = #88C0D0
alert = #bd2c40ff
modulefg = #5E81AC
modulefg-alt = #5E81AC

; Active Shade
shade1 = #282629
shade2 = #37474F
shade3 = #455A64
shade4 = #546E7A
shade5 = #607D8B
shade6 = #78909C
shade7 = #90A4AE
shade8 = #B0BEC5

;trans = #ccfaaaaa
;white = #FFFFFF
;black = #000000
;tray-background = ${xrdb:color7:#222}
;#404552

##########################################################################################################################################

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

##########################################################################################################################################

[bar/barbase]
width = 99%
height = 26
offset-x = .5%
offset-y = 5
monitor = ${env:monitor}
fixed-center = true
bottom = false
enable-ipc = true

background = ${color.background}
foreground = ${color.foreground}

padding = 1
module-margin-left = 1


;font-0 = "SauceCodePro Nerd Font:size=14:weight=semibold;3"
font-0 = "Hack Nerd Font:size=14;3"
font-1 = "Noto Sans Mono:size=14;0"
font-2 = "FontAwesome:size=14;0"
#font-4 = "Noto Sans:size=14;0"

##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################
;choices : see modules.ini
; highlighted to see where to add the modules
modules-center = 
modules-right = date battery pulseaudio powermenu

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0 
modules-center = 
modules-right = layout0 date battery pulseaudio powermenu
tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${color.background}

[module/workspace0]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag


[module/layout0]
type = custom/script
format-prefix = " "
format-prefix-foreground = ${color.amber}
exec = leftwm-state -w 1 -s "{{ workspace.layout }}"
tail = true

click-left = leftwm-command "NextLayout"
click-right = leftwm-command "PreviousLayout"

