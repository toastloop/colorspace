# SUPER + SHIFT KEYS
#################################################################


super + shift + f
    io.gitlab.librewolf-community

super + shift + t
    alacritty -e nnn -dDeQAo

super + shift + a
    alacritty

super + shift + c
    com.visualstudio.code-oss

super + shift + z
    alacritty -e "nvim"

super + shift + y
    alacritty -e "btm"

super + shift + e
    alacritty -e "ncspot"

super + shift + g
    com.discordapp.Discord

super + shift + b
    com.bitwarden.desktop

super + shift + d
    bash ~/.config/leftwm/themes/current/rofi/drun.sh

super + shift + v
    pavucontrol

super + shift + grave
    bash ~/.config/leftwm/themes/current/rofi/power.sh

